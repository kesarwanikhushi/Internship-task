# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?appName=<appname>

# Server Port (local development)
PORT=5000

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Email Service Configuration (Gmail SMTP)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your_16_char_app_password_here
EMAIL_FROM="Task Manager <noreply@taskmanager.com>"

# Frontend URL (for CORS - NO trailing slash)
# Local development
# FRONTEND_URL=http://localhost:5173
# Production
FRONTEND_URL=https://your-frontend-app.vercel.app

# Optional: SendGrid API Key (alternative to Gmail SMTP)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
